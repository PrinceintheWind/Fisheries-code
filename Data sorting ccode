require(data.table)
require(dplyr)
require(sp)
require(sf)
library(raster)
library(rgdal)
library(PROJ)

fresh_data <- read.csv('C:/Users/Bonsu/Desktop/Thuenen/PASSIVE GEARS IN OWF/FDI_spatial_data_EU28/spatial_effort_EU28.csv')

#STEP1
fresh_data_dt <- as.data.table(fresh_data)
fpo <- subset(fresh_data_dt, gear_type == "FPO") #only FPO
cru <- subset(fpo, target_assemblage == "CRU") #only crustaceans
nsr <- subset(cru, sub_region %in% c("27.4.A", "27.4.B", "27.4.C"))
write.csv(nsr, file = "NSR.csv")

#STEP2
# excluding 2021
years_to_exclude <- c( '2021')
nsr13to20 <- nsr[!nsr$year %in% years_to_exclude, ]


#STEP3
# sum effort for each ices triangle per year. this adds all the quarters into one year
sumicesquarter <- nsr13to20[ , .(sum_days = sum(totfishdays)), by = .(icesname, year)]
write.csv(sumicesquarter, file = "sumofquarter.csv")

#STEP 4
# mean effort across all data years for each ices rectangle 
meanicesyear <- sumicesyear[ , .(mean_days = mean(sum_days)), by = .(icesname)]
write.csv(meanicesyear, file = "explainable mean.csv")

# adding up the years only
sumofyears <- sumicesquarter[ , .(sum_years = sum(sum_days)), by = .(year)]
write.csv(sumofyears, file = "sumofyears.csv")
